extends layout

block content
  div.mx-auto.container
    h1(class="my-12 text-4xl font-bold text-center text-blue-500") Arc's Message Board
    div(class="grid grid-rows-[50px_1fr_auto] h-[560px] mx-auto w-full md:w-[800px] border-gray-800 shadow-xl")
      div(class="grid items-center text-center text-white shadow bg-slate-950 rounded-tr-md rounded-tl-md") Announcements
      div(class="px-10 pt-5 overflow-auto bg-slate-200")
        each message in messages
          div.flex.gap-x-4.mb-6
            div(class="grid flex-shrink-0 w-10 h-10 bg-blue-200 rounded-full place-items-center")=message.user.charAt(0).toUpperCase()
            div
              p=message.user
              h3.rounded-lg.shadow.px-4.py-2.bg-white=message.text
      div(class="px-4 py-2 rounded bg-slate-900")
        form(action="/new" method="POST" class="grid grid-cols-[1fr_auto] gap-x-4 pt-4")
          div(class="flex flex-col w-full *:py-2 *:px-6 gap-y-2 *:text-sm *:border-gray-700 *:bg-transparent *:border")
            input(type="text" name="user" placeholder="User" class="rounded" required)
            input(type="text" name="text" placeholder="Text" class="rounded" required) 
          button(type="submit" class="flex items-center justify-center w-20 h-20 px-6 py-2 bg-blue-700 rounded-full shadow border-radius gap-x-2" )
            i(class="fa-solid fa-paper-plane") 